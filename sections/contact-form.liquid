<div class="flex flex-col items-center my-8">
  {% form 'contact' %}

    {% if section.settings.title != blank %}      
    <h1 class="text-2xl font-semibold text-center my-8 md:my-16">{{ section.settings.title }}</h1>
    {% endif %}

    {% if form.errors %}
        <div class="border p-5">
          <div class="flex flex-row items-center w-full my-3">
            <div class="text-red-500">
              {% render 'icon-failed' %}
            </div>
            <div class="text-sm font-medium ml-3">
              Oh no! Your Message is not sent
            </div>
          </div>
          <ul class="px-4 mb-3 ml-7 list-decimal">
            {% for error in form.errors %}
              <li class="text-red-500">
                <span>{{ form.errors.message[error] }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% elsif form.posted_successfully? %}
        <div class="flex flex-row itmes-center w-full my-3 p-5">
          <div class="text-green-500">
            {% render 'icon-success' %}
          </div>
          <div class="text-sm font-medium ml-3">
            Your message is sent successfully
          </div>
        </div>
      {% endif %}

    <div class="max-w-6xl mx-auto justify-center items-center px-4">
      <div class="grid grid-cols-2 px-1 mb-3">
        <div class="px-3 flex flex-col">
          <label class="text-gray-500 font-semibold text-lg" for="contact_name">Name</label>
          <input class="border border-gray-500 px-3 py-2" type="text" name="contact[name]" id="contact_name">
        </div>
        <div class="px-3 flex flex-col"> 
          <label class="text-gray-500 font-semibold text-lg" for="contact_email">Email Address</label>
          <input class="border border-gray-500 px-3 py-2" type="email" name="contact[email]" id="contact_email">  
        </div>
    </div>   
   <div class="px-4">
      <label class="text-lg text-gray-500 font-semibold" for="contact_message">Message</label>
      <textarea class="w-full border border-gray-500 px-5 py-3" name="contact[body]" id="contact_message"></textarea>
   </div>
<div class="text-lg px-4 font-semibold w-full">
  <input class="text-center cursor-pointer px-4 w-full py-2 text-base hover:bg-gray-600 bg-gray-800 text-white mt-3" type="submit" value="Submit message">
</div>
  {% endform %}
</div>

{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}