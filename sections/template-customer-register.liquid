<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-2xl font-bold mt-6">Register an Account</h1>
    </div>

    <div class="mt-8">
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 p-4">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline-block">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="first_name" class="sr-only">First Name</label>
          <input
            type="text"
            name="customer[first_name]"
            id="first_name"
            autocomplete="given-name"
            placeholder="First Name"
            class="relative border w-full block px-3 py-2">
        </div>
        <div class="my-2">
          <label for="last_name" class="sr-only">Last Name</label>
          <input
            type="text"
            name="customer[last_name]"
            id="last_name"
            autocomplete="family-name"
            placeholder="Last Name"
            class="relative border w-full block px-3 py-2">
        </div>
        <div class="my-2">
          <label for="birthday" class="sr-only">Birthday</label>
          <input
            type="date"
            name="customer[note][Birthday]"
            id="birthday"
            class="relative border w-full block px-3 py-2">
        </div>
        <div class="my-2">
          <label for="email_address" class="sr-only">Email Address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            placeholder="Email Address"
            class="relative border w-full block px-3 py-2">
        </div>
        <div class="my-2">
          <label for="Password" class="sr-only">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new_password"
            placeholder="password"
            class="relative border w-full block px-3 py-2">
        </div>

        <div>
          <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-800 hover:bg-slate-600">
            Create Account
          </button>
        </div>
      {% endform %}
    </div>

  </div>

</div>